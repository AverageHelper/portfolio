---
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"a">, "target" | "rel" | "class"> {
	href: string | URL;
}

const { href, ...attrs } = Astro.props;
---

<a href={href} target="_blank" rel="external noopener noreferrer" class="hint" {...attrs}
	><slot /></a
>
