---
import ExternalLink from "./ExternalLink.astro";
import LocalLink from "./LocalLink.astro";
import Logo from "./Logo.astro";
---

<footer>
	<ul class="links">
		<li>
			<!-- prettier-ignore -->
			<ExternalLink href="https://git.average.name/AverageHelper/portfolio">source</ExternalLink>
		</li>
		<li><LocalLink fileName="humans.txt">humans.txt</LocalLink></li>
		<li><LocalLink fileName="sitemap">sitemap</LocalLink></li>
	</ul>

	<ul id="contact">
		<li>
			<ExternalLink
				relMe
				href="https://git.average.name/AverageHelper"
				data-tooltip="git.average.name/AverageHelper"
			>
				<Logo key="forgejo" />
			</ExternalLink>
		</li>
		<li>
			<ExternalLink
				relMe
				href="https://codeberg.org/AverageHelper"
				data-tooltip="codeberg.org/AverageHelper"
			>
				<Logo key="codeberg" />
			</ExternalLink>
		</li>
		<li>
			<ExternalLink
				relMe
				href="https://github.com/AverageHelper"
				data-tooltip="github.com/AverageHelper"
			>
				<Logo key="github" />
			</ExternalLink>
		</li>
		<li>
			<!-- Eventually I want @avg@average.name... -->
			<ExternalLink
				relMe
				href="https://fosstodon.org/@avghelper"
				data-tooltip="fosstodon.org/@avghelper"
			>
				<Logo key="fedi" />
			</ExternalLink>
		</li>
	</ul>
</footer>
