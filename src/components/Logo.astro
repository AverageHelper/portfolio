---
const logos = {
	codeberg: {
		name: "Codeberg",
		path: "/images/logo-codeberg.svg",
	},
	discord: {
		name: "Discord",
		path: "/images/logo-discord.svg",
	},
	fedi: {
		name: "Fediverse",
		path: "/images/logo-fediverse.svg",
	},
	forgejo: {
		name: "Forgejo",
		path: "/images/logo-forgejo.svg",
	},
	github: {
		name: "GitHub",
		path: "/images/logo-github.svg",
	},
	matrix: {
		name: "Matrix",
		path: "/images/logo-matrix.svg",
	},
	phone: {
		name: "Telephone",
		path: "/images/logo-telephone.svg",
	},
	signal: {
		name: "Signal",
		path: "/images/logo-signal.svg",
	},
} as const;

interface Props {
	/** A string identifying the platform whose logo to display. */
	name: keyof typeof logos;
}

const { name: key } = Astro.props;
const logo = logos[key];
const src = logo.path;
const alt = logo.name;
---

<img src={src} alt={alt} />
