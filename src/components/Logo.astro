---
const logos = {
	forgejo: {
		name: "Forgejo",
		path: "/images/logo-forgejo.svg",
	},
	codeberg: {
		name: "Codeberg",
		path: "/images/logo-codeberg.svg",
	},
	github: {
		name: "GitHub",
		path: "/images/logo-github.svg",
	},
	fedi: {
		name: "Fediverse",
		path: "/images/logo-fediverse.svg",
	},
	matrix: {
		name: "Matrix",
		path: "/images/logo-matrix.svg",
	},
} as const;

interface Props {
	/** A string identifying the platform whose logo to display. */
	name: keyof typeof logos;
}

const { name: key } = Astro.props;
const logo = logos[key];
const alt = `${logo.name} logo` as const;
const src = logo.path;
---

<img src={src} alt={alt} />
