---
import type { PlatformName } from "@/helpers/logos.js";
import { logos } from "@/helpers/logos.js";

interface Props {
	/** A string identifying the platform whose logo to display. */
	name: PlatformName;
}

const { name: key } = Astro.props;
const logo = logos[key];
const src = logo.path;
const alt = logo.name;
---

<img src={src} alt={alt} title={logo.name} />
