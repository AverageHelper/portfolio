{
	"arrowParens": "avoid",
	"htmlWhitespaceSensitivity": "strict",
	"printWidth": 100,
	"proseWrap": "preserve",
	"semi": true,
	"singleQuote": false,
	"useTabs": true,
	"tabWidth": 2,
	"plugins": ["prettier-plugin-astro", "@prettier/plugin-xml"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro",
				"astroAllowShorthand": false
			}
		}
	]
}
